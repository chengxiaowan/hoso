        //点击保存后关闭当前的iframe弹窗
        // var bobodrool = parent.layer.getFrameIndex(window.name);
        // console.log(bobodrool)
        // document.getElementById("save").onclick = function () {
        //     parent.layer.close(bobodrool)
        // }


    </script>

</body>

</html>