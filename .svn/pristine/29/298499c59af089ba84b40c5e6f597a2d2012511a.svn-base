<!DOCTYPE html>
<html>

	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>编辑商品分类</title>
		<meta name="keywords" content="寒舍">
		<meta name="description" content="寒舍">
		<link rel="stylesheet" href="../css/bootstrap.min.css">
		<link rel="stylesheet" href="../css/font-awesome.min.css?v=4.3.0">
		<link rel="stylesheet" href="../js/plugins/layui/css/layui.css">
		<link rel="stylesheet" href="../css/animate.min.css">
		<link rel="stylesheet" href="../css/style.css">
		<link rel="stylesheet" href="../css/layout.css">
		<link rel="stylesheet" href="https://unpkg.com/element-ui/lib/theme-chalk/index.css">
	</head>

	<body class="gray-bg">
		<div class="wrapper wrapper-content  animated fadeInRight" id="app">
			<div class="ibox-content">
				<form name="contractForm" id="contractForm" class="form form-horizontal">
					<div class="row row_list">
						<div class="col-sm-6 clear">
							<div class="form-group">
								<label class="col-sm-2 control-label">分类名称</label>
								<div class="col-sm-10">
									<input class="form-control" data-validate="require|maxLength=50" type="text" placeholder="请输入分类名称" v-model="name">
								</div>
							</div>
						</div>

						<div class="col-sm-6 clear" v-if="type==2">
							<div class="form-group">
								<label class="col-sm-2 control-label">父分类</label>
								<div class="col-sm-10">
									<template>
										<el-select v-model="selected" clearable filterable placeholder="请选择父分类" style='width: 100%;'>
											<el-option v-for="item in typeList" :key="item.parentId" :label="item.parentName" :value="item.parentId">
											</el-option>
										</el-select>
									</template>
								</div>
							</div>
						</div>
						<div class="col-sm-6 clear">
							<div class="form-group">
								<label class="col-sm-2 control-label">顺序号 <em class="red">*</em></label>
								<div class="col-sm-10">
									<input class="form-control" data-validate="require|maxLength=50" type="number" placeholder="顺序号" v-model="sortNo">
								</div>
							</div>
						</div>
						<div class="col-sm-6 clear">
							<div class="form-group">
								<label class="col-sm-2 control-label">分类图片</label>
								<div class="col-sm-10">
									<div class="layui-upload" id="btn-uploader">
										<div class="layui-upload-list pull-left" style="clear: both;">
											<img style="width: 60%;" class="layui-upload-img" id="demo1" :src="picPath">
											<p id="demoText"></p>
										</div>
										<button type="button" class="layui-btn pull-left" id="pickfiles">上传图片</button>
									</div>
								</div>
							</div>
						</div>
					</div>
				</form>
				<div class="ibox-content-btn">
					<a class="btn btn-htz  btn-primary" title="保存" @click="save();">保存</a>
					<a class="btn btn-htz  btn-htz-default" title="取消" onclick="cancle();">取消</a>
				</div>
			</div>
		</div>
		<!-- 全局js -->
		<script src="../js/jquery-2.1.1.min.js"></script>
		<script src="../js/bootstrap.min.js"></script>
		<script src="../js/plugins/layer/layer.min.js"></script>
		<script src="../js/plugins/layui/layui.js"></script>
		<script src="../js/vue.js"></script>
		<!-- 自定义js -->
		<script src="../js/content.min.js?v=1.0.0"></script>
		<script src="../js/custom/common.js"></script>
		<script type="text/javascript" src="../js/qiniuyun/plupload.full.min.js"></script>
		<script type="text/javascript" src="../js/qiniuyun/moxie.min.js"></script>
		<script type="text/javascript" src="https://cdn.staticfile.org/plupload/2.1.2/i18n/zh_CN.js"></script>
		<!-- qiniu.js依赖于Plupload，所以Plupload要在qiniu.js之前引用 -->
		<script src="../js/custom/element-ui/index.js"></script>
		<script type="text/javascript" src="../js/qiniuyun/qiniu.js"></script>
		<script src="../js/qiniuyun/qiniuImg.js"></script>
		<script src="../js/custom/category/edit.js"></script>
	</body>

</html>